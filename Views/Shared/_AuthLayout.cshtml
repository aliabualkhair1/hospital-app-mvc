@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - مستشفى الخير</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #0f172a; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            color: white;
        }

        .auth-container {
            width: 100%;
            max-width: 500px;
            background-color: #1e293b;
            padding: 80px 30px 30px;
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
            text-align: right;
            overflow: visible; 
            position: relative;
            
        }


        .auth-logo {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            position: absolute;
            top: -50px;
            left: 50%;
            transform: translateX(-50%);
            border: 3px solid #0d6efd;
            box-shadow: 0 0 10px rgba(13, 110, 253, 0.5);
            background-color: #fff;
            z-index: 10;
        }



        h3 {
            color: #38bdf8;
            margin-bottom: 25px;
        }

        label {
            color: #f1f5f9;
            font-weight: 500;
        }

        input.form-control, select.form-select {
            background-color: #334155;
            border: 1px solid #475569;
            color: #f8fafc;
        }

            input.form-control:focus, select.form-select:focus {
                background-color: #334155;
                border-color: #0d6efd;
                color: white;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .btn-link {
            color: #38bdf8;
        }

            .btn-link:hover {
                text-decoration: underline;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="auth-container">
        <img src="~/HospitalLogo.png" alt="Hospital Logo" class="auth-logo" />
        @if (TempData["RateLimitMessage"] != null)
{
    <div class="d-flex justify-content-center mt-3">
        <div class="alert alert-danger alert-dismissible fade show w-75 text-center" role="alert">
            @TempData["RateLimitMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" ></button>
        </div>
    </div>
}
        @RenderBody()

    </div>

    <script>
        function togglePassword(id, btn) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                btn.innerText = "🔓";
            } else {
                input.type = "password";
                btn.innerText = "🔒";
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
