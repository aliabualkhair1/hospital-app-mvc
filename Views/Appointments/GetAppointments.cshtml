@model IEnumerable<Hospital_Project.Entities.Appointments>
@{
    ViewData["Title"] = "قائمة المواعيد  ";
}
<div class="container mt-0">
    <h2 class="text-primary mb-4">قائمة المواعيد</h2>
    @if (TempData["Success"] != null)
    {
        <div id="successMessage"
             class="alert alert-success text-center position-fixed start-50 translate-middle-x"
             style="top: 20px; z-index: 9999; font-size: 18px; min-width: 300px;">
            @TempData["Success"]
        </div>
    }

    <div style="width: 350px;">
        <a class="btn btn-success w-100 mb-3" asp-action="AddAppointment">إضافة موعد جديد</a>

        <form method="get" asp-action="GetAppointments" asp-controller="Appointments">
            <div class="mb-2">
                <label class="form-label">تاريخ الحجز</label>
                <input type="date" name="searchengine" class="form-control" value="@Context.Request.Query["searchengine"]" />
            </div>

            @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
            {
                <div class="mb-2">
                    <label class="form-label">رقم الهاتف</label>
                    <input type="text" name="phone" class="form-control" placeholder="رقم الهاتف" value="@Context.Request.Query["phone"]" />
                </div>
            }

            @if (User.IsInRole("Patient"))
            {
                <div class="mb-2">
                    <label class="form-label">بحث بالإسم</label>
                    <input type="text" name="search" class="form-control" placeholder="الإسم" value="@Context.Request.Query["search"]" />
                </div>
            }

            <div>
                <button type="submit" class="btn btn-primary w-100">🔍 بحث</button>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center fs-4 fw-bold text-dark">
            لا توجد مواعيد حجز حتى الأن
        </div>
    }
    else
    {
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-hover shadow rounded" style="min-width: 3100px;">
                <thead class="table-dark">
                    <tr>
                        <th>رقم هاتف المريض</th>                        
                        <th>إسم المريض</th>
                        <th>إسم الطبيب</th>
                        <th>ميعاد التواجد</th>
                        <th>سعر الكشف</th>
                        <th>معرف الموظف</th>
                        <th>الموظف القائم بالحجز</th>
                        <th>تاريخ الحجز</th>
                        <th>تاريخ الكشف</th>
                        <th>رقم الكشف</th>
                        <th>تاريخ الإستشارة</th>
                        <th>رقم الإستشارة</th>
                        <th>نهاية فترة الإستشارة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            
                                <td>@appointment.Patient.Phone</td>
                            
                            <td>@appointment.Patient.Name</td>
                            <td>@appointment.Doctor.Name - @appointment.Doctor.Department.Name - @appointment.Doctor.DoctorRank</td>
                            <td>
                                @appointment.DoctorAvailableTime.AvailableTimes
                                من @appointment.DoctorAvailableTime.StartTime.ToString("hh:mm tt", new System.Globalization.CultureInfo("ar-EG"))
                                إلى @appointment.DoctorAvailableTime.EndTime.ToString("hh:mm tt", new System.Globalization.CultureInfo("ar-EG"))
                            </td>
                            <td>@appointment.Doctor.BookingSalary</td>
                            <td>@appointment.EmployeeId</td>
                            <td>
                                @(appointment.Employee != null && !string.IsNullOrWhiteSpace(appointment.Employee.Name)
                                            ? appointment.Employee.Name
                                            : "المريض من قام بالحجز")
                            </td>
                            <td>@appointment.DateOfBooking.ToString("dd-MM-yyyy  hh:mm:ss  dddd", new System.Globalization.CultureInfo("ar-EG"))</td>
                            <td>@appointment.DoctorDate.ToDateTime(TimeOnly.MinValue).ToString("dd-MM-yyyy dddd", new System.Globalization.CultureInfo("ar-EG"))</td>
                            <td>@appointment.NumberOfBooking</td>
                            <td>
                                @(appointment.ConsultationDate != null
                                            ? appointment.ConsultationDate?.ToDateTime(TimeOnly.MinValue).ToString("dd-MM-yyyy dddd", new System.Globalization.CultureInfo("ar-EG"))
                                            : "من فضلك ارجع للموظف لحجز الإستشارة")
                            </td>
                            <td>
                                @(appointment.NumberOfConsultation != null
                                            ? appointment.NumberOfConsultation
                                            : "من فضلك ارجع للموظف لحجز الإستشارة")
                            </td>
                            <td>@appointment.EndOfConsultationDate.ToDateTime(TimeOnly.MinValue).ToString("dd-MM-yyyy dddd", new System.Globalization.CultureInfo("ar-EG"))</td>
                            
                                <td>
                                    <a asp-action="UpdateAppointment" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning ms-2">تعديل</a>
                                    <a asp-action="DeleteAppointment" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger ms-2">حذف</a>
                                @if (User.IsInRole("Employee"))
                                {
                                   <a href="@Url.Action("Print", "Appointments", new { id = @appointment.Id })" class="btn btn-info" target="_blank">طباعة</a>
                                }
                                </td>

                            
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
</div>
@section scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById("successMessage");
            if (alert) {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = '0';
                setTimeout(function () {
                    alert.remove();
                }, 500);
            }
        }, 3000);
    </script>
}