@using Hospital_Project.Entities.User
@model List<UserWithRoleViewModel>

@{
    ViewData["Title"] = "عرض المستخدمين وتغيير الأدوار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div id="successMessage" class="alert alert-success">@TempData["Success"]</div>
}

<h2 class="text-primary mb-4">قائمة المستخدمين</h2>

<form class="my-3" method="get" asp-action="Show" asp-controller="Admin">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="بحث برقم الهاتف" name="searchengine" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="بحث" class="btn btn-success btn-block" />
        </div>
    </div>
</form>

<div style="overflow-x: auto; width: 100%;">
    <table class="table table-hover shadow rounded" style="min-width:2400px;">
        <thead class="table-dark">
            <tr>
                <th>الإسم الأول</th>
                <th>إسم العائلة</th>
                <th>البريد الإلكتروني</th>
                <th>رقم الهاتف</th>
                <th>الدور الحالي</th>
                <th>تغيير الدور</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        @foreach (var role in user.Roles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    </td>
                    <td>
                        <form asp-action="ChangeRole" asp-controller="Admin" method="post" class="d-flex align-items-center">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <select name="newRole" class="form-select me-2" style="max-width: 200px;">
                                <option value="">--إختر الدور--</option>
                                <option value="Admin">مسئول</option>
                                <option value="Employee">موظف</option>
                                <option value="Nurse">ممرض</option>
                                <option value="Doctor">طبيب</option>
                                <option value="Patient">مريض</option>
                            </select>
                            <button type="submit" class="btn btn-warning btn-sm">تغيير</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    setTimeout(function () {
        var alert = document.getElementById("successMessage");
        if (alert) {
            alert.style.transition = "opacity 0.5s ease-out";
            alert.style.opacity = '0';
            setTimeout(function () {
                alert.remove();
            }, 500);
        }
    }, 3000);
</script>
