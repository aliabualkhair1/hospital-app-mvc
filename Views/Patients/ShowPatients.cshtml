
@using Hospital_Project.Entities
@model IEnumerable<Patients>

@{
    ViewData["Title"] = "قائمة المرضى";
}
    <div class="container mt-0">
        <h2 class="text-primary mb-4">قائمة المرضى</h2>

    @if (TempData["Success"] != null)
    {
        <div id="successMessage"
             class="alert alert-success text-center position-fixed start-50 translate-middle-x"
             style="top: 20px; z-index: 9999; font-size: 18px; min-width: 300px;">
            @TempData["Success"]
        </div>
    }
        <div style="width: 350px; ">
            <a class="btn btn-success w-100 mb-3" asp-action="AddPatient">إضافة مريض جديد</a>


                <form method="get" asp-action="ShowPatients" asp-controller="Patients">
                    <div class="mb-2">
                        <input placeholder="بحث برقم الهاتف" name="searchengine" class="form-control" />
                    </div>
                    <div>
                        <input type="submit" value="بحث" class="btn btn-success w-100" />
                    </div>
                </form>
        </div>
    </div>


    @if (!Model.Any())
    {
        <div class="alert alert-light text-center fs-4 fw-bold text-dark">
            لا يوجد مرضى حتى الآن
        </div>
    }
    else
    {
        <div class="table-responsive">
        <table class="table table-hover shadow rounded" style="min-width:3100px;">
            <thead class="table-dark">
                    <tr>
                        <th>الرقم</th>
                        <th>الاسم</th>
                        <th>العمر</th>
                        <th>النوع</th> 
                        <th>رقم الهاتف</th>
                        <th>تاريخ الحجز</th>
                        <th>تاريخ الكشف</th>
                        <th>تاريخ الاستشارة</th>
                        <th>نهاية فترة الاستشارة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.Id</td>
                            <td>@patient.Name</td>
                            <td>@patient.Age</td>
                            <td>@patient.Gender</td>
                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <td>@patient.Phone</td>
                            }
                            <td>
                                @if (patient.Appointments != null && patient.Appointments.Any())
                                {
                                    <ul class="list-unstyled m-0">
                                        @foreach (var appointment in patient.Appointments)
                                        {
                                            <li>@appointment.DateOfBooking.ToString(" dddd dd-MM-yyyy  hh:mm:ss:tt ", new System.Globalization.CultureInfo("ar-EG"))</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>لا يوجد مواعيد</span>
                                }
                            </td>
                            <td>
                                @if (patient.Appointments != null && patient.Appointments.Any())
                                {
                                    <ul class="list-unstyled m-0">
                                        @foreach (var appointment in patient.Appointments)
                                        {
                                            <li>@appointment.DoctorDate.ToDateTime(TimeOnly.MinValue).ToString(" dddd dd-MM-yyyy ", new System.Globalization.CultureInfo("ar-EG"))</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>لا يوجد مواعيد</span>
                                }
                            </td>
                            <td>
                                @if (patient.Appointments != null && patient.Appointments.Any())
                                {
                                    <ul class="list-unstyled m-0">
                                        @foreach (var appointment in patient.Appointments)
                                        {
                                            <li>@appointment.ConsultationDate?.ToDateTime(TimeOnly.MinValue).ToString("dddd dd-MM-yyyy ", new System.Globalization.CultureInfo("ar-EG"))</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>لا يوجد مواعيد</span>
                                }
                            </td>
                            <td>
                                @if (patient.Appointments != null && patient.Appointments.Any())
                                {
                                    <ul class="list-unstyled m-0">
                                        @foreach (var appointment in patient.Appointments)
                                        {
                                            <li>@appointment.EndOfConsultationDate.ToDateTime(TimeOnly.MinValue).ToString("dddd dd-MM-yyyy ", new System.Globalization.CultureInfo("ar-EG"))</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>لا يوجد مواعيد</span>
                                }
                            </td>
                                <td class="text-nowrap">
                                    <a asp-action="UpdatePatient" asp-route-id="@patient.Id" class="btn btn-warning btn-sm me-2">تعديل</a>
                                    <a asp-action="DeletePatient" asp-route-id="@patient.Id" class="btn btn-danger btn-sm">حذف</a>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@section scripts {
    <script>
        setTimeout(function () {
            var alert = document.getElementById("successMessage");
            if (alert) {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = '0';
                setTimeout(function () {
                    alert.remove();
                }, 500);
            }
        }, 3000);
    </script>
}
