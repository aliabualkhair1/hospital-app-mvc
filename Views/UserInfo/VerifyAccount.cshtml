@using Hospital_Project.Entities.UserDTOs
@model VerifyCodeViewModel
@{

    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="auth-container">
    <h2 class="text-center mb-4 text-white">تفعيل الحساب</h2>
    <form asp-action="VerifyAccount" method="post">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

            <div class="form-group">
                <input asp-for="Email" class="form-control" hidden />
            </div>
   

        <div class="form-group">
            <label asp-for="Code" class="text-white">رمز التفعيل</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">تأكيد التفعيل</button>
    </form>

    <form asp-action="ResendVerificationCode" method="post" class="text-center mt-3">
        <input type="hidden" name="email" value="@Model.Email" />
        <button type="submit" class="btn btn-link text-white">إعادة إرسال الكود</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // تعطيل التحقق من الصحة التلقائية
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('form').setAttribute('novalidate', 'true');

            // إزالة أي رسائل تحقق إنجليزية
            document.querySelectorAll('[data-valmsg-for]').forEach(el => {
                if(el.textContent.includes('The ')) {
                    el.textContent = '';
                }
            });
        });
    </script>
}